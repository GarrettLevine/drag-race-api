{
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "experimentalObjectRestSpread": true
      },
    },
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "extends": "airbnb",
    "rules": {
      "arrow-body-style": 0,
      "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
  
      "no-console": 0, // console logs are fine
      "array-bracket-spacing": 0, // Problematic for ES6 destructuring
      "new-cap": 0, // new keyword?
      "object-shorthand": 0, // confusing when some properties can use it, and others cannot
      "no-extra-parens": 0, // in arrow functions, do we use parens or no?
      "consistent-return": 0, // possible confusion when returns might be of done function
      "space-before-function-paren": 0,
      "no-trailing-spaces": [2, { "skipBlankLines": true }], // weird issues with space indentation
      "max-len": [1, 100, 2, { "ignoreComments": true, "ignoreTrailingComments": true}],
      "padded-blocks": 1, // to not break build
      "no-multiple-empty-lines": 1, // to not break build
      "no-prototype-builtins": 0,
      "no-underscore-dangle": 0, // this is used for private methods
      "no-unused-vars": [1, {
        "varsIgnorePattern": "(props|expect|wrapper)", // for testing
        "argsIgnorePattern": "(props|err|nextProps|nextState|prevProps|prevState|nextLocation|response|action|res|reject|store|ownProps|dispatch)"
      }], // Warn, ignoring args
      "comma-dangle": ["error", {
        "objects": "always-multiline",
        "arrays": "always-multiline",
        "exports": "always-multiline",
        "imports": "always-multiline",
        "functions": "never"
      }],
  
      "class-methods-use-this": 0, // Not super useful in React
      "no-useless-constructor": 0, // Unnecessary with prefer stateless
      "react/prop-types": 1, // Don't want it to break build
      "react/no-unused-prop-types": 0, // Allow unused proptypes
      "react/no-unescaped-entities": 0,
      "react/no-array-index-key": 0, // Occasionally useful
      "react/jsx-filename-extension": 0, // For things like index.html and routes
      "react/require-default-props": 0,
      "react/prefer-stateless-function": 0, // This isnt actually a performance improvement
      "react/no-danger": 0, // LIVE DANGEROUSLY
      "react/jsx-no-target-blank": 0, // LIVE EVEN DANGEROUSLY-ER
      "jsx-a11y/href-no-hash": 0,
      "jsx-a11y/no-autofocus": 0,
      "jsx-a11y/no-noninteractive-tabindex": 0,
      "jsx-a11y/no-noninteractive-element-interactions": 0, // TODO fix this
      "jsx-a11y/no-static-element-interactions": 0, // TODO fix this
      "jsx-a11y/alt-text": 0, // TODO fix this
      "jsx-a11y/accessible-emoji": 0,
  
      "import/prefer-default-export": 0, // Because of how we export utils/selectors
      "import/newline-after-import": 0, // Because of how we import/export in ducks
      "import/no-named-as-default": 0, // Because of how we do connect & testing
      "import/first": 0 // Because of how we import/export in ducks
    },
    "plugins": [
      "react"
    ]
  }
  